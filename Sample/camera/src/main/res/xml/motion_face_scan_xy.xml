<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/faceScanStart"
        motion:constraintSetStart="@id/faceScanBegin"
        motion:duration="1000" />

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@id/faceScanCompleted"
        motion:constraintSetStart="@id/faceScanStart"
        motion:duration="1000" />

    <ConstraintSet android:id="@+id/faceScanBegin">
        <Constraint
            android:id="@id/viewScanX"
            android:layout_width="@dimen/faceScanXYWidth"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/faceScanRadius"
            android:layout_marginBottom="@dimen/faceScanRadius"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/viewScanY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/faceScanXYWidth"
            android:layout_marginStart="@dimen/faceScanRadius"
            android:layout_marginEnd="@dimen/faceScanRadius"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/faceScanStart">
        <Constraint
            android:id="@id/viewScanX"
            android:layout_width="@dimen/faceScanXYWidth"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/faceScanRadius"
            android:layout_marginBottom="@dimen/faceScanRadius"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/viewScanY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/faceScanXYWidth"
            android:layout_marginStart="@dimen/faceScanRadius"
            android:layout_marginEnd="@dimen/faceScanRadius"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/faceScanCompleted">
        <Constraint
            android:id="@id/viewScanX"
            android:layout_width="@dimen/faceScanXYWidth"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/faceScanRadius"
            android:layout_marginBottom="@dimen/faceScanRadius"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/viewScanY"
            android:layout_width="0dp"
            android:layout_height="@dimen/faceScanXYWidth"
            android:layout_marginStart="@dimen/faceScanRadius"
            android:layout_marginEnd="@dimen/faceScanRadius"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>

</MotionScene>
<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/focused"
        motion:constraintSetStart="@id/unfocused"
        motion:duration="280" />

    <Transition
        motion:constraintSetEnd="@id/unfocused"
        motion:constraintSetStart="@id/focused"
        motion:duration="280" />

    <ConstraintSet android:id="@+id/unfocused">
        <Constraint
            android:id="@id/editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/rowHeight"
            android:layout_marginTop="14dp"
            android:textSize="10sp"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintWidth_default="percent">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#00000000" />
        </Constraint>
        <Constraint
            android:id="@id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contentMarginX2"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="@+id/editText"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/editText" />
        <Constraint
            android:id="@id/textViewError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            motion:layout_constraintStart_toStartOf="@id/editText"
            motion:layout_constraintTop_toBottomOf="@id/editText" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/focused">
        <Constraint
            android:id="@id/editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/rowHeight"
            android:layout_marginTop="14dp"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintWidth_default="percent">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#000000" />
        </Constraint>
        <Constraint
            android:id="@id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".8"
            android:scaleY=".8"
            motion:layout_constraintBottom_toTopOf="@+id/editText"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/editText" />
        <Constraint
            android:id="@id/textViewError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            motion:layout_constraintStart_toStartOf="@id/editText"
            motion:layout_constraintTop_toBottomOf="@id/editText" />
    </ConstraintSet>

</MotionScene>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--TEXT VIEW-->
    <style name="TextView"
        parent="WrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextView.PlaceHolder">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Error">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="Button"
        parent="TextView">
        <item name="android:layout_height">@dimen/rowHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/drw_btn_primary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="EditText"
        parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:longClickable">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColorHint">#BEBEBE</item>
        <item name="android:maxLength">256</item>
        <item name="android:background">@null</item>
        <item name="android:importantForAutofill"
            tools:targetApi="o">no</item>
    </style>

    <!--IMAGE VIEW-->
    <style name="ImageView" />


    <style name="ScrollView" parent="MatchParent">
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="RecyclerView" parent="MatchWidth">
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ParentContent" parent="MatchParent">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerticalView" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VerticalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MatchConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HorizontalGuideLine" parent="WrapContent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalGuideLine" parent="WrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">0.5px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
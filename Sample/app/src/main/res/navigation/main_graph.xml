<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/chatFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="wee.digital.sample.ui.fragment.plash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash" />

    <action
        android:id="@+id/action_global_splashFragment"
        app:destination="@id/splashFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="wee.digital.sample.ui.fragment.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />

    <dialog
        android:id="@+id/alertFragment"
        android:name="wee.digital.sample.ui.fragment.alert.AlertFragment"
        android:label="AlertFragment"
        tools:layout="@layout/alert" />
    <action
        android:id="@+id/action_global_alertFragment"
        app:destination="@id/alertFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="wee.digital.sample.ui.fragment.sign_in.SignInFragment"
        android:label="LoginFragment"
        tools:layout="@layout/sign_in" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />

    <dialog
        android:id="@+id/selectableFragment"
        android:name="wee.digital.sample.ui.fragment.selectable.SelectableFragment"
        android:label="SelectableFragment"
        tools:layout="@layout/selectable" />
    <action
        android:id="@+id/action_global_selectableFragment"
        app:destination="@id/selectableFragment" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="wee.digital.sample.ui.fragment.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register" />
    <action
        android:id="@+id/action_global_registerFragment"
        app:destination="@id/registerFragment" />

    <fragment
        android:id="@+id/contactFragment"
        android:name="wee.digital.sample.ui.fragment.contact.ContactFragment"
        android:label="contact"
        tools:layout="@layout/contact" />
    <action
        android:id="@+id/action_global_contactFragment"
        app:destination="@id/contactFragment" />

    <dialog
        android:id="@+id/infoFragment"
        android:name="wee.digital.sample.ui.fragment.info.InfoFragment"
        android:label="info"
        tools:layout="@layout/info" />
    <action
        android:id="@+id/action_global_infoFragment"
        app:destination="@id/infoFragment" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="wee.digital.sample.ui.fragment.chat.ChatFragment"
        android:label="ChatFragment" />
    <action
        android:id="@+id/action_global_chatFragment"
        app:destination="@id/chatFragment" />

</navigation>
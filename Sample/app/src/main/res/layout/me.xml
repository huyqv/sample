<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    tools:background="@color/colorWhite">

    <wee.digital.widget.custom.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/contentMarginX2"
        android:textSize="@dimen/textSize2"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/me_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/drw_oval"
        android:backgroundTint="@color/colorWhite"
        android:padding="5dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/avatarView"
        app:layout_constraintEnd_toEndOf="@+id/avatarView"
        app:layout_constraintStart_toStartOf="@+id/avatarView"
        app:layout_constraintTop_toBottomOf="@+id/avatarView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewFullName"
        style="@style/TextView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/avatarView"
        app:layout_constraintStart_toStartOf="@+id/avatarView"
        app:layout_constraintTop_toBottomOf="@+id/avatarView"
        tools:text="@tools:sample/full_names" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewFullName">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewBackup"
            style="@style/Button"
            android:padding="8dp"
            android:text="Backup" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewRestore"
            style="@style/Button"
            android:padding="8dp"
            android:text="Restore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.878" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/viewSignOut"
        style="@style/Button"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Sign out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/colorWhite">

    <wee.digital.widget.custom.AvatarView
        android:id="@+id/itemChatAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/contentMarginX2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@sample/avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemChatName"
        style="@style/TextView"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@+id/itemChatMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemChatAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@sample/user.json/data/fullName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemChatMessage"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemChatAvatar"
        app:layout_constraintTop_toBottomOf="@+id/itemChatName"
        tools:text="@sample/user.json/data/fullName" />

</androidx.constraintlayout.widget.ConstraintLayout>
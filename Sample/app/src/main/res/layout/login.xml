<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <wee.digital.widget.base.AppConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/contentMargin"
        android:background="@color/colorWhite"
        android:elevation="@dimen/_1sdp"
        app:layout_constraintDimensionRatio="h,9:5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:radius="@dimen/cardRadius">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/contentMargin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/contentMargin" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/contentMarginX2"
            android:src="@drawable/ic_placeholder"
            android:tint="@color/colorPrimary"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".15" />

        <wee.digital.widget.custom.InputView
            android:id="@+id/inputViewEmail"
            style="@style/InputView"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/contentMarginX2"
            android:inputType="textEmailAddress"
            android:src="@drawable/ic_mail"
            android:title="Email"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

        <wee.digital.widget.custom.InputView
            android:id="@+id/inputViewPassword"
            style="@style/InputView"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/contentMarginD2"
            android:inputType="textPassword"
            android:src="@drawable/ic_lock"
            android:title="Password"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/inputViewEmail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewLogin"
            style="@style/Button.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/contentMarginX2"
            android:text="Login"
            app:layout_constraintEnd_toEndOf="@+id/inputViewEmail"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/inputViewPassword" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewGoogle"
            style="@style/Login.ProviderButton"
            android:layout_marginTop="@dimen/contentMargin"
            android:backgroundTint="#E53935"
            android:src="@drawable/ic_google"
            app:layout_constraintEnd_toStartOf="@+id/viewFacebook"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/viewLogin" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewFacebook"
            style="@style/Login.ProviderButton"
            android:backgroundTint="#3949AB"
            android:src="@drawable/ic_facebook"
            app:layout_constraintEnd_toStartOf="@+id/viewTwitter"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/viewGoogle"
            app:layout_constraintTop_toTopOf="@+id/viewGoogle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewTwitter"
            style="@style/Login.ProviderButton"
            android:backgroundTint="#1E88E5"
            android:src="@drawable/ic_twitter"
            app:layout_constraintEnd_toStartOf="@+id/viewPhone"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/viewFacebook"
            app:layout_constraintTop_toTopOf="@+id/viewFacebook" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewPhone"
            style="@style/Login.ProviderButton"
            android:backgroundTint="#00897B"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/viewTwitter"
            app:layout_constraintTop_toTopOf="@+id/viewTwitter" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewRegister"
            style="@style/Button"
            android:layout_marginBottom="@dimen/contentMargin"
            android:text="Register"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewFacebook"
            app:layout_constraintVertical_bias="1.0" />

    </wee.digital.widget.base.AppConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


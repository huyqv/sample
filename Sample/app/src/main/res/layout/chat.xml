<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chat_root"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/chat_bar"
        layout="@layout/chat_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_widget_input"
        app:layout_constraintTop_toBottomOf="@+id/chat_bar" />

    <wee.digital.sample.widget.WidgetChatInput
        android:id="@+id/chat_widget_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemContactAvatar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/colorPrimary"
        app:riv_border_width="2dp"
        app:riv_oval="true"
        tools:src="@color/colorBlack" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemContactName"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/itemContactAvatar"
        app:layout_constraintStart_toEndOf="@+id/itemContactAvatar"
        app:layout_constraintTop_toTopOf="@+id/itemContactAvatar"
        tools:text="AppCompatTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
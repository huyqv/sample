<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent"
    android:orientation="vertical">

    <wee.digital.widget.TextCustomView
        android:id="@+id/textViewPlaceHolder"
        style="@style/TextView.PlaceHolder"
        android:layout_margin="@dimen/contentMarginD2"
        android:text="SAMPLE" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollView"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/MatchWidth"
            android:minHeight="@dimen/_600sdp"
            android:orientation="vertical"
            android:padding="@dimen/contentMarginD2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comViewWidgets"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:text="Widgets" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comViewCamera"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:text="Camera" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/comViewNext"
        style="@style/Button.Primary"
        android:layout_margin="@dimen/_8sdp"
        android:text="Next" />


</androidx.appcompat.widget.LinearLayoutCompat>
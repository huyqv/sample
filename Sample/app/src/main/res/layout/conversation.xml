<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conversation_root"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/conversation_bar"
        layout="@layout/conversation_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_recycler_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/conversation_widget_input"
        app:layout_constraintTop_toBottomOf="@+id/conversation_bar" />

    <wee.digital.sample.widget.WidgetChatInput
        android:id="@+id/conversation_widget_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toTopOf="@+id/conversation_widget_input"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
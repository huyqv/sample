<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- BASE APPLICATION THEME. -->
    <style name="App" />

    <style name="App.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar"
            tools:targetApi="m">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:navigationBarColor">#00000000</item>
    </style>

    <style name="App.Theme.Splash" parent="App.Theme">
        <item name="android:windowBackground">@drawable/drw_plash_bg</item>
    </style>

    <style name="App.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">96%</item>
        <item name="android:windowMinWidthMinor">96%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:navigationBarColor">#ffffff</item>
    </style>

    <style name="App.DialogAnim">
        <item name="android:windowEnterAnimation">@anim/vertical_enter</item>
        <item name="android:windowExitAnimation">@anim/vertical_exit</item>
    </style>

    <style name="App.Dialog.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="App.Dialog.FullScreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="App.Dialog.FullScreen.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="App.Dialog.FullScreen.Floating">
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- CUSTOM APPLICATION THEME. -->

</resources>
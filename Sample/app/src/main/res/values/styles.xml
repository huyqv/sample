<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <!--<item name="android:drawableStart">@drawable/ic_checkbox</item>-->
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="App.RadioButton" parent="App.CheckBox">
        <!--<item name="android:drawableStart">@drawable/ic_radio</item>-->
    </style>

    <style name="Fragment" />

    <style name="Dialog" />

    <style name="Dialog.BottomLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_200sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Dialog.Title"
        parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_54sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">@dimen/_54sdp</item>
        <item name="android:layout_height">@dimen/_54sdp</item>
        <item name="android:padding">@dimen/_22sdp</item>
        <item name="android:tint">#424242</item>
    </style>

    <style name="Login" />

    <style name="Login.ProviderButton">
        <item name="android:layout_width">@dimen/rowHeight</item>
        <item name="android:layout_height">@dimen/rowHeight</item>
        <item name="android:background">@drawable/drw_oval</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <!--<item name="android:drawableStart">@drawable/ic_checkbox</item>-->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="App.RadioButton" parent="App.CheckBox">
        <!--<item name="android:drawableStart">@drawable/ic_radio</item>-->
    </style>

    <style name="Fragment" />

    <style name="Dialog" />

    <style name="Dialog.BottomLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Dialog.Title"
        parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:padding">22dp</item>
        <item name="android:tint">#424242</item>
    </style>

    <style name="Login" />

    <style name="Login.ProviderButton" parent="Button.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/rowHeight</item>
    </style>

    <style name="Fragment.CenterDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:elevation">1dp</item>
        <item name="layout_constraintHeight_percent">0.8</item>
        <item name="radius">@dimen/cardRadius</item>
        <item name="layout_constraintDimensionRatio">h,9:5</item>
    </style>


</resources>
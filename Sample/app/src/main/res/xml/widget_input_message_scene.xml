<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/unFocus">

        <Constraint
            android:id="@+id/chat_input_add"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg"/>

        <Constraint
            android:id="@+id/chat_input_photo"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_add"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_camera"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_photo"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_audio"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_camera"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_bg"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_audio"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/chat_input_emoji"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toEndOf="@+id/chat_input_bg"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_input"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_emoji"
            motion:layout_constraintStart_toStartOf="@+id/chat_input_bg"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/focus">

        <Constraint
            android:id="@+id/chat_input_add"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg"/>

        <Constraint
            android:id="@+id/chat_input_photo"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_add"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_camera"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_photo"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_audio"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@+id/chat_input_bg"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_camera"
            motion:layout_constraintTop_toTopOf="@+id/chat_input_bg" />

        <Constraint
            android:id="@+id/chat_input_bg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="45dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_add"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/chat_input_input"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="45dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/chat_input_emoji"
            motion:layout_constraintStart_toStartOf="@+id/chat_input_bg"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/focus"
        app:constraintSetStart="@+id/unFocus"
        app:duration="250" />

</MotionScene>
